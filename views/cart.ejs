<% include header %>
    <table class="table table-striped table-inverse table-responsive" style="margin-left: 100px;">
        <thead class="thead-inverse">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Ảnh sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Thành tiền</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
              <% dulieu.forEach(function(item){ %>
              <tr>
                <td><%= item.tensp %></td>
                <td><img src="/anhsp/<%= item.anhsp %>" alt="" width="100px" height="100px"></td>
                <td><%= item.soluong %></td>
                <td><%= item.giasp %></td>
                <td><%= item.soluong*item.giasp %></td>
                <td>
                 <a href="/xoaspOrder/<%= item._id %>" onclick="return xacnhan()"><i style="font-size: 20px" class="fa fa-trash"></i></a> / 
                 <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal<%= item._id %>">Edit</button>
                 </td>
                 <form action="/editspOrder/<%= item._id %>" method="post">
                 <div class="modal fade" id="myModal<%= item._id %>" role="dialog">
                        <div class="modal-dialog">
                          <!-- Modal content-->
                          <div class="modal-content">
                            <div class="modal-header">
                              <h4 class="modal-title">Cập nhật lại số lượng mua hàng</h4>
                            </div>
                            <div class="modal-body" style="display: flex">
                                <div class="col-3">
                                    <img src="/anhsp/<%= item.anhsp %>" width="150px" height="150px">
                                </div>
                                <div class="col-6" style="margin-left: 60px;">
                                            <h6><span style="font-weight: bold">Tên sản phẩm:</span><%= item.tensp %></h6>
                                            <h6><span style="font-weight: bold">Giá:</span><%= item.giasp %></h6>
                                            <h6><span style="font-weight: bold">Số lượng: <input type="number" id="soluong" name="soluong" value="<%= item.soluong %>" style="width: 60px;">
                                            </h6>
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success">Cập nhật</button>
                              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                          </div>
                        </div> 
                    </form>
              <% }) %>
              </tr>
            </tbody>
    </table>
    <form action="/thanhtoan" method="POST">
    <div>
        <h3>Thành tiền:<%= tong %></h3>
        <Button type="submit">Thanh toán</Button>
    </div>
    </form>
<% include footer %>