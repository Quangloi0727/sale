<%include header_admin%>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <!-- Page Title Header Ends-->
            <div class="row">   
                <div class="col-12">
                    <div class="jumbotron">
                        <h1 class="display-3" style="font-family: Arial">Sửa thông tin sản phẩm</h1>
                        <hr class="my-2">
                        <% dulieu.forEach(function (item){ %>
                            <form action="/editProduct/<%=item._id %>" method="post">
                            <table class="table table-striped table-inverse table-responsive">
                                    <tbody>
                                        <tr>
                                            <td>Tên sản phẩm</td>
                                            <td><input type="text" name="tensp" value="<%= item.tensp %>"></td>
                                        </tr>
                                        <tr>
                                            <td>Giá</td>
                                            <td><input type="number" name="gia"  value="<%= item.gia %>"></td>
                                        </tr>
                                        <tr>
                                            <td>Mô tả</td>
                                            <td><textarea name="mota" cols="30" rows="10"> <%= item.mota %></textarea></td>
                                        </tr>
                                        <tr>
                                            <td>Nhóm sản phẩm</td>
                                            <td><select name="nhomsp">
                                                <option value="Nội thất phòng khách">Nội thất phòng khách</option>
                                                <option value="Nội thất phòng ngủ">Nội thất phòng ngủ</option>
                                                <option value="Nội thất phòng thờ,cúng">Nội thất phòng thờ,cúng</option>
                                                <option value="Nội thất phòng ăn">Nội thất phòng ăn</option>
                                                <option value="Các sản phẩm khác">Các sản phẩm khác</option>
                                            </select></td>
                                        </tr>
                                        <tr>
                                          <td>Số lượng</td>
                                          <td><input type="number" name="soluong"  value="<%= item.soluong %>"></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"><button type="submit" class="btn btn-success">Sửa sản phẩm</button></td>
                                        </tr>
                                    </tbody>
                            </table>
                        </form>
                        <% }) %>
                        
                    </div>
                </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
       <% include footer_admin%>